// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id        Int    @id @default(autoincrement())
    firstName String
    lastName  String

    email String @unique
    hash  String

    calorieItems   FoodItem[]
    excerciseItems ExcerciseItem[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("users")
}

model FoodItem {
    id           Int    @id @default(autoincrement())
    user         User   @relation(fields: [userId], references: [id])
    userId       Int
    name         String
    calorieCount Int

    createdAt DateTime @default(now())

    @@map("food_items")
}

model ExcerciseItem {
    id           Int    @id @default(autoincrement())
    user         User   @relation(fields: [userId], references: [id])
    userId       Int
    name         String
    calorieCount Int

    createdAt DateTime @default(now())

    @@map("excercise_items")
}
